<section id="articles">
  <% for article in articles[0...3] %>
    <article>
      <header>
        <h1><a href="<%= article.path %>"><%= article.title %></a></h1>
        <time datetime="<%= article[:date].iso8601 %>" pubdate><%= article.date %></time>
      </header>
      <section class="content">
        <%= article.summary %>
      </section>
        <span class="meta"><a href="<%= article.path %>">Continue reading &rarr;</a></span>
      <hr />
    </article>
  <% end %>
</section>
